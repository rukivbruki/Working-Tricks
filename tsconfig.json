{
  "compilerOptions": {
    "types": ["node"],
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "target": "esnext"
  },
  "compileOnSave": true,
  "include": ["./"],
  "exclude": ["./node_modules/**/*", "./typings/**/*"]
}
